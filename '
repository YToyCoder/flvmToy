#pragma once
#include <fstream>
#include <string>
#include "token.h"

template<typename _Ty, size_t size>
class FixedBuffer {
public:
	_Ty operator()() {
		if (m_cursor >= size) {
			throw std::exception("buffer index out of range");
		}
		return mbuf[m_cursor++];
	}
private:
	_Ty mbuf[size];
	size_t m_cursor;
};

class Lex {
public:
	Lex(const std::string& rFilename);
	bool init();
protected:
	enum LexState {
		LexState_Created = 0,
		LexState_Init ,
		LexState_Closed
	};
	// checking state
	bool check_state() const ;
	Token fetch_token();
private:
	std::string mFilename;
	std::fstream mfstream;
	LexState mState;
};
